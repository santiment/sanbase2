<div class="shadow-xl p-10 bg-white max-w-xl rounded mb-4">
<%= form_for @changeset, @action, [multipart: true], fn f -> %>
  <%= if @changeset.action != nil do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="mb-4 relative">
    <%= text_input f, :name, id: "name", class: "input border border-gray-400 appearance-none rounded w-full px-3 py-3 pt-5 pb-2 focus focus:border-indigo-600 focus:outline-none active:outline-none active:border-indigo-600" %>
    <label for="name" class="label absolute mb-0 -mt-2 pt-4 pl-3 leading-tighter text-gray-400 text-base mt-2 cursor-text">Name</label>
  </div>

  <div class="mb-4 relative">
    <%= textarea f, :description, id: "description", class: "input border border-gray-400 appearance-none rounded w-full px-3 py-3 pt-5 pb-2 focus focus:border-indigo-600 focus:outline-none active:outline-none active:border-indigo-600" %>
    <label for="description" class="label absolute mb-0 -mt-2 pt-4 pl-3 leading-tighter text-gray-400 text-base mt-2 cursor-text">Description</label>
  </div>

  <div class="mb-4 relative">
    <label>Published?</label>
    <%= checkbox f, :is_published, id: "Published?", class: "form-checkbox h-4 w-4 text-blue-600"%>
  </div>

  <div class="mb-4 relative">
    <label for="PRO?">PRO?</label>
    <%= checkbox f, :is_pro, id: "PRO?", class: "form-checkbox h-4 w-4 text-blue-600"%>
  </div>

  <div class="mb-4 relative">
    <%= text_input f, :tags, id: "tags", class: "input border border-gray-400 appearance-none rounded w-full px-3 py-3 pt-5 pb-2 focus focus:border-indigo-600 focus:outline-none active:outline-none active:border-indigo-600" %>
    <label for="tags" class="label absolute mb-0 -mt-2 pt-4 pl-3 leading-tighter text-gray-400 text-base mt-2 cursor-text">Tags (separated by comma)</label>
    <%= error_tag f, :tags %>
  </div>

  <%= submit "Save", class: "flex-shrink-0 border-4 text-teal-500 hover:text-teal-800 py-1 px-2 rounded" %>

<% end %>
</div>
